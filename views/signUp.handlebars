<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input id="signup-name" type="text" class="form-control" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input id="signup-username" type="text" class="form-control" placeholder="Pick a username">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input id="signup-email" type="email" class="form-control" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input id="signup-password" type="password" class="form-control" placeholder="Password">
                </div>

                <button id="signup-submit" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript" src="js/signUp.js"></script>